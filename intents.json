{
  "intents": [
    {
      "tag": "greeting",
      "patterns": [
        "Hi",
        "Hello",
        "Whats up",
        "Good day",
        "How are you",
        "Is anyone there?"
      ],
      "responses": [
        "Hello!",
        "Hey :-)",
        "Hello my friend, welcome!",
        "Hi there, how can I help?",
        "Hello, thanks for visiting",
        "Hi there, what can I do for you?"
      ]
    },
    {
      "tag": "goodbye",
      "patterns": [
        "Bye",
        "Cya",
        "See you later",
        "Goodbye",
        "I am Leaving",
        "Have a Good day"
      ],
      "responses": [
        "Goodbye!",
        "Have a nice day",
        "Talk to you later",
        "Sad to see you go :(",
        "Bye! Come back again soon.",
        "See you later, thanks for visiting"
      ]
    },
    {
      "tag": "name",
      "patterns": [
        "What is your name",
        "What should I call you",
        "Whats your name?"
      ],
      "responses": ["You can call me Bot.", "I'm Bot!", "My name is Le Bot"]
    },
    {
      "tag": "thanks",
      "patterns": ["Thanks", "Thank you", "That's helpful", "Thank's a lot!"],
      "responses": ["Happy to help!", "Any time!", "My pleasure", "No problem!"]
    },
    {
      "tag": "items",
      "patterns": [
        "Which items do you have?",
        "What kinds of items are there?",
        "What do you sell?"
      ],
      "responses": ["We sell coffee and tea", "We have coffee and tea"]
    },
    {
      "tag": "payments",
      "patterns": [
        "Do you take credit cards?",
        "Do you accept Mastercard?",
        "Can I pay with Paypal?",
        "Are you cash only?"
      ],
      "responses": [
        "We accept VISA, Mastercard and Paypal",
        "We accept most major credit cards, and Paypal"
      ]
    },
    {
      "tag": "shop",
      "patterns": [
        "I'd like to buy something",
        "What's on the menu?",
        "What do you reccommend?",
        "Could I get something to eat"
      ],
      "responses": [
        "We sell chocolate chip cookies for $2!",
        "Cookies are on the menu!"
      ]
    },
    {
      "tag": "delivery",
      "patterns": [
        "How long does delivery take?",
        "How long does shipping take?",
        "When do I get my delivery?"
      ],
      "responses": ["Delivery takes 2-4 days", "Shipping takes 2-4 days"]
    },
    {
      "tag": "hours",
      "patterns": [
        "When are you guys open",
        "What are your hours",
        "Hours of operation"
      ],
      "responses": ["We are always open 9h to 17h Monday to Friday!"]
    },
    {
      "tag": "funny",
      "patterns": [
        "Tell me a joke!",
        "Tell me something funny!",
        "Do you know a joke?"
      ],
      "responses": [
        "Why did the hipster burn his mouth? He drank the coffee before it was cool.",
        "What did the buffalo say when his son left for college? Bison."
      ]
    }
  ]
}
